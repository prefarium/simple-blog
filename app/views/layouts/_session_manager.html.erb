<% if logged_in? %>
  <span class = "username">
    <%= "Logged in as #{current_user.username}" %>
  </span>
  <%= link_to "logout", logout_path, class: :button %>

<% else %>
  <%= link_to "login", login_path, class: :button %>
<% end %>

<% unless Author.exists? %>
  <%= link_to "registration", new_author_path, class: :button %>
<% end %>
