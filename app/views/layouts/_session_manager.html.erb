<% if logged_in? %>
  <span class = "session-marker">
    <%= "Logged in as #{current_user.username}" %>
  </span>
  <%= link_to "logout", logout_path, class: 'button auth-button' %>

<% else %>
  <%= link_to "login", login_path, class: 'button auth-button' %>
<% end %>

<% unless Author.exists? %>
  <%= link_to "registration", new_author_path, class: 'button auth-button' %>
<% end %>
