<!DOCTYPE html>
<html>

  <head>
    <title><%= full_title(yield(:page_title)) %></title>

    <%= render 'layouts/rails_defaults' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%# render 'shared/flashes' %>

    <%# Side navigation block %>
    <aside class = "nav-block">
      <%= render 'layouts/section_switch' %>
    </aside>

    <%# Main content%>
    <div class = "main-content">

      <%# Page title %>
      <header class = "content-blocks">
        <span class = "page-title">
          <%= yield(:page_title) %>
        </span>
      </header>

      <%# Yielded content %>
      <main class = "content-blocks">
        <%= yield %>
      </main>

      <%# Login/logout buttons and informantion %>
      <footer class = "content-blocks">
        <%= render 'layouts/session_manager'%>
      </footer>

    </div>
  </body>
</html>
