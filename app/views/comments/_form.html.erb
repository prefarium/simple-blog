<%= form_for [@article, @comment] do |f| %>

  <p class = 'new-comment-field-block'>
    <%= f.label :author_name, 'Tell me your name',
                class: 'new-comment-field-title' %><br/>
    <%= f.text_field :author_name, class: 'new-comment-name-field' %>
  </p>

  <p class = 'new-comment-field-block'>
    <%= f.label :body, 'Go ahead, write!',
                class: 'new-comment-field-title' %><br/>
    <%= f.text_area :body, class: 'new-comment-text-field' %>
  </p>

  <%= f.submit 'Submit', class: 'submit-comment' %>
<% end %>
