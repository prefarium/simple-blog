<%= form_for [@article, @comment] do |f| %>

  <p class = 'comment-form-item'>
    <%= f.label :author_name, 'Tell me your name',
                class: 'comment-form-item-title' %><br/>
    <%= f.text_field :author_name, class: 'comment-form-item-field' %>
  </p>

  <p class = 'comment-form-item'>
    <%= f.label :body, 'Go ahead, write!',
                class: 'comment-form-item-title' %><br/>
    <%= f.text_area :body, class: 'comment-form-item-field' %>
  </p>

  <%= f.submit 'Submit', class: 'comment-form-submit-button' %>
<% end %>
