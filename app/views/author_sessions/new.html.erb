<% provide(:page_title, 'Login') %>

<%= form_tag author_sessions_path, method: :post do %>

  <%= text_field_tag :email, '', class: 'input-field',
                                 placeholder: 'Email' %>

  <%= password_field_tag :password, '', class: 'input-field',
                                        placeholder: 'Password' %>

  <%= submit_tag "login", class: 'button button--login' %>
<% end %>
