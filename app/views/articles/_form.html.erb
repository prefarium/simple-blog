<%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>

  <p class = 'article-form-item'>
    <%= f.label :title, class: 'article-form-item-title' %><br />
    <%= f.text_field :title, class: 'article-form-item-field' %>
  </p>

  <p class = 'article-form-item'>
    <%= f.label :body, class: 'article-form-item-title' %><br />
    <%= f.text_area :body, class: 'article-form-item-field' %>
  </p>

  <p class = 'article-form-item'>
    <%= f.label :tag_list, class: 'article-form-item-title' %><br />
    <%= f.text_field :tag_list, class: 'article-form-item-field' %>
  </p>

  <%= f.submit 'Load!', class: 'article-form-submit-button' %>
<% end %>
