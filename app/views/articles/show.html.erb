<h1><%= @article.title %></h1>
<p><%=  @article.body  %></p>


<p>Created <%= @article.created_at.strftime("%-d %b %Y") %>
        at <%= @article.created_at.strftime('%k:%M') %></p>

<% if @article.updated_at != @article.created_at %>
<p>Updated <%= @article.updated_at.strftime("%-d %b %Y") %>
        at <%= @article.updated_at.strftime('%k:%M') %></p>
<% end %>


<%= link_to '[Edit]', edit_article_path(@article) %>

<%= link_to '[Delete]', article_path(@article),
            method: :delete,
            data: { confirm: 'Are you sure you want it?' } %>

<%= link_to '[Delete (I know what I\'m doing)]', article_path(@article),
            method: :delete %>

<%= link_to '[Back]', articles_path %>


<%= render 'comments/form'%>


<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render partial: 'comments/comment', collection: @article.comments, as: :comment %>
