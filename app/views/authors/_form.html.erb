<%= form_with(model: author, local: true) do |form| %>

  <%= form.text_field :username, class: 'input-field',
                                 placeholder: 'Username' %>

  <%= form.text_field :email, class: 'input-field',
                              placeholder: 'Email' %>

  <%= form.password_field :password, class: 'input-field',
                                     placeholder: 'Password' %>

  <%= form.password_field :password_confirmation, class: 'input-field',
      placeholder: 'Password confirmation' %>

  <%= form.submit 'Sign up', class: 'button button--sign-up' %>

<% end %>
